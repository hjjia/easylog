{
	"name":"EasyTest",
	"description":"A easy way to Testing",
	"version":"1.0",
	"manifest_version":2,
	"browser_action":{
		"default_popup":"popup.html",
		"default_title": "EasyLog ^_^",
		"dafault_icon":{
			"16":"images/get_started16.png",
			"32":"images/get_started32.png",
			"48":"images/get_started48.png"
		}
	},
	"icons": {
		"16":"images/get_started16.png",
		"32":"images/get_started32.png",
		"48":"images/get_started48.png"
	},
	"options_page": "options.html",
	"permissions":["<all_urls>","tabs","webRequest","activeTab","declarativeContent","storage","contextMenus"],
	"content_scripts":[{
		"matches":["<all_urls>"],
		"js":["js/jquery.js","js/layer.js","js/function.js", "content_script.js"],
		"css":["js/layer.css"]
	}],
	"background": {
		"matches":["<all_urls>"],
		"scripts":["background.js","js/jquery.js","js/function.js"],
		"persistent": true
	}

}

