{
	"name":"EasyLog",
	"description":"A easy way to check the log",
	"version":"1.0",
	"manifest_version":2,
	"page_action":{
		"default_popup":"popup.html",
		"default_title": "EasyLog ^_^",
		"dafault_icon":{
			"16":"images/get_started16.png",
			"32":"images/get_started32.png",
			"48":"images/get_started48.png"
		}
	},
	"icons": {
		"16":"images/get_started16.png",
		"32":"images/get_started32.png",
		"48":"images/get_started48.png"
	},
	"options_page": "options.html",
	"permissions":["*://*/*","webRequest","webRequestBlocking","activeTab","declarativeContent","storage"],
	"content_scripts":[{
		"matches":["*://*/*"],
		"js":["js/jquery.js", "content_script.js"]
	}],
	"background": {
		"scripts":["background.js","js/jquery.js"],
		"persistent": true
	}

}

